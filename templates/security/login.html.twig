{% extends 'base.html.twig' %}

{% block title %}login!{% endblock %}

{% block body %}
<h1 class="text-center">Login</h1>
    <div class="container col-md-6">
    <form method="post">
        {% if error %}
            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}
        <label for="text" class="sr-only">Pesudo</label>
        <input type="text" name="pesudo" id="pesudo" class="form-control mt-4" placeholder="Pesudo" required>

        <label for="inputEmail" class="sr-only ">Email</label>
        <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control mt-3" placeholder="Email" required autofocus>
        <label for="inputPassword" class="sr-only">Password</label>
        <input type="password" name="password" id="inputPassword" class="form-control mt-4" placeholder="Password" required>

        <input type="hidden" name="_csrf_token"
               value="{{ csrf_token('authenticate') }}">

        {#
            Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
            See https://symfony.com/doc/current/security/remember_me.html

            <div class="checkbox mb-3">
                <label>
                    <input type="checkbox" name="_remember_me"> Remember me
                </label>
            </div>
        #}

        <button class="btn btn-lg btn-primary mt-3" type="submit">
            Sign in
        </button>
    </form>
    </div>

{% endblock %}
